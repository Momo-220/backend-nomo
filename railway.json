{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.railway"
  },
  "deploy": {
    "restartPolicyType": "NEVER",
    "healthcheckPath": "/api/v1/health/live",
    "healthcheckTimeout": 300,
    "startTimeout": 600
  }
}
